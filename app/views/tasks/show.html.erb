<%- model_class = Task -%>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tasks_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_task_path(@task), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              task_path(@task),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
<div class="page-header">
  <h1><%= @task.title %></h1>
</div>

  <p>Deliverer: <strong><%= @task.by_whom_output %></strong></p>
  <p>Finished by: <strong><%= @task.finished_by.strftime("%d %B %Y") unless @task.finished_by.nil? %></strong></p>
  <p>Status: <%= @task.status_output %></p>
  <% if @task.description.present? %>
    <hr />
    <p>Description:</p>
    <p><%= simple_format @task.description %></p>
  <% end %>
  <% if @task.kind == 1 && @task.bdd.present? %>
    <hr />
    <p>Test spec:</p>
    <p><%= simple_format @task.bdd %></p>
  <% end %>
