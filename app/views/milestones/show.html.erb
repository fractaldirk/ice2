<%- model_class = Milestone -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:finished_by) %>:</strong></dt>
  <dd><%= @milestone.finished_by.strftime("%d %B %Y") unless @milestone.finished_by.nil? %></dd>
  <dt><strong><%= model_class.human_attribute_name(:by_whom) %>:</strong></dt>
  <dd><%= @milestone.by_whom_output %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @milestone.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:deliverable) %>:</strong></dt>
  <dd><%= @milestone.deliverable %></dd>
  <dt><strong><%= model_class.human_attribute_name(:extern_link) %>:</strong></dt>
  <dd><%= @milestone.extern_link %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              milestones_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_milestone_path(@milestone), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              milestone_path(@milestone),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
